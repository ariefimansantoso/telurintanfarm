                            cicilan = cicilan + pt.RP_POTONGAN;
                        }
                    }

                    if (listPenalty.Count > 0)
                    {
                        foreach (var penalty in listPenalty)
                        {
                            potonganNonCicilan = potonganNonCicilan + penalty.PenaltyAmount;
                        }
                    }

                    if (listBonus.Count > 0)
