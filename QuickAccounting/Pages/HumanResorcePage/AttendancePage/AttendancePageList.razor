                        remainingMinutes = 0;         
                        libur = 0;                        
                        jumlahTerlambatCount = 0;
                        cicilan = 0;
                        //potonganNonCicilan = 0;
                        potonganSetengahHari = 0;
                        gajiBersih = gajiNonPremi + tambahanGaji - potonganNonCicilan;
                    }

