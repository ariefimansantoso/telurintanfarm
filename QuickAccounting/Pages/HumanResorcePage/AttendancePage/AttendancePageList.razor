                    if (setengahHari > 0)
                    {
                        potonganSetengahHari = potonganSetengahHari + (SelectedEmployee.DailyWage / 2);
                    }

                    if (listPotongan.Count > 0)
                    {
                        foreach (var pt in listPotongan)
