                                    <th>Bulan</th>
                                    <th>Mati</th>
                                    <th>Populasi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var totalKematian = 0;
                                    var totalPopulasi = 0;
                                }
                                @foreach (var record in ReportItems5Percent)
