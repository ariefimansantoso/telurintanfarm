    bool ChartDataLoaded = false;
    int RataRataMati = 0;
    int RataRataMatiAbove5Percent = 0;
    bool isProcessing;

    private BarConfig _config;
    private Chart _chart;
    private string _chartKey = Guid.NewGuid().ToString();

    private async Task LoadRecording()
    {
        isProcessing = true;

        DailyRecordings5OrBelowPercent = await _recording.GetMortality5OrBelowPercent(SelectedNoKandang, dtFromDate, dtToDate);
        DailyRecordings = await _recording.GetMortality5OrAbovePercent(SelectedNoKandang, dtFromDate, dtToDate);

        DailyRecordings5OrBelowPercent = DailyRecordings5OrBelowPercent.OrderBy(x => x.RecordDate).ToList();
        ReportItems5Percent = DailyRecordings5OrBelowPercent
                        .GroupBy(record => new { record.RecordDate.Year, record.RecordDate.Month })
                        .Select(group => new ReportItem
                        {
                            MonthLabel = new DateTime(group.Key.Year, group.Key.Month, 1).ToString("MMM yyyy"),
                            TotalDeadHenCount = group.Sum(record => record.DeadHenCount),
                            TotalPopulasi = group.Where(record => record.RecordDate == new DateTime(group.Key.Year, group.Key.Month, 1)).Sum(record => record.PopulationEnd)
                        })
                        .ToList();

        DailyRecordings = DailyRecordings.OrderBy(x => x.RecordDate).ToList();
        ReportItemsAbove5Percent = DailyRecordings
                        .GroupBy(record => new { record.RecordDate.Year, record.RecordDate.Month })
                        .Select(group => new ReportItem
                        {
                            MonthLabel = new DateTime(group.Key.Year, group.Key.Month, 1).ToString("MMM yyyy"),
                            TotalDeadHenCount = group.Sum(record => record.DeadHenCount),
                            TotalPopulasi = group.Where(record => record.RecordDate == new DateTime(group.Key.Year, group.Key.Month, 1)).Sum(record => record.PopulationEnd)
                        })
                        .ToList();

        if (ReportItems5Percent.Count > 0 || ReportItemsAbove5Percent.Count > 0)
        {
            if (ReportItems5Percent.Count > 0)
            {
                RataRataMati = ReportItems5Percent.Sum(x => x.TotalDeadHenCount) / ReportItems5Percent.Count;
            }

            if (ReportItemsAbove5Percent.Count > 0)
            {
                RataRataMatiAbove5Percent = ReportItemsAbove5Percent.Sum(x => x.TotalDeadHenCount) / ReportItemsAbove5Percent.Count;
            }

            _chartKey = Guid.NewGuid().ToString();

            if (SelectedNoKandang != "ALL")
            {                
                await GetGraphData();
            }
            else
            {                
                await GetGraphDataAll();
            }
        }

        isProcessing = false;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        var now = DateTime.Now;
        dtFromDate = new DateTime(now.Year, now.Month, 1);
        int lastDay = DateTime.DaysInMonth(now.Year, now.Month);
        dtToDate = new DateTime(now.Year, now.Month, lastDay);

        // Simulate fetching data from a service
        CageList = await _kandang.GetAll();

    }

    private async Task GetGraphData()
    {                       
        _config = new BarConfig
        {
            Options = new BarOptions
            {
                Responsive = true,
                Legend = new Legend
                {
                    Position = ChartJs.Blazor.Common.Enums.Position.Top
                },
                Title = new OptionsTitle
                {
                    Display = true,
                    Text = "Grafik Kematian Ayam"
                }
            }
        };

        IDataset<int> dataset1 = new BarDataset<int>(ReportItems5Percent.Select(record => (int)record.TotalDeadHenCount).ToList())
        {
            Label = "5% Kandang " + SelectedNoKandang,
            BackgroundColor = ColorUtil.FromDrawingColor(System.Drawing.Color.FromArgb(128, System.Drawing.Color.FromArgb(255, 99, 132))),
            BorderColor = ColorUtil.FromDrawingColor(System.Drawing.Color.FromArgb(255, 99, 132)),
            BorderWidth = 1
        };

        IDataset<int> dataset2 = new BarDataset<int>(ReportItemsAbove5Percent.Select(record => (int)record.TotalDeadHenCount).ToList())
        {
            Label = "Diatas 5% Kandang " + SelectedNoKandang,
            BackgroundColor = ColorUtil.FromDrawingColor(System.Drawing.Color.FromArgb(128, System.Drawing.Color.FromArgb(3, 15, 252))),
            BorderColor = ColorUtil.FromDrawingColor(System.Drawing.Color.FromArgb(3, 15, 252)),
            BorderWidth = 1
        };

        foreach (var label in ReportItems5Percent.Select(record => record.MonthLabel))
        {
            _config.Data.Labels.Add(label);
        }

        _config.Data.Datasets.Add(dataset1);
        _config.Data.Datasets.Add(dataset2);
        
        ChartDataLoaded = true;
    }

    private async Task GetGraphDataAll()
    {        
        _config = new BarConfig
        {
            Options = new BarOptions
            {
                Responsive = true,
                Legend = new Legend
                {
                    Position = ChartJs.Blazor.Common.Enums.Position.Top
                },
                Title = new OptionsTitle
                {
                    Display = true,
                    Text = "Grafik Kematian Ayam"
                }
            }
        };

        IDataset<int> dataset1 = new BarDataset<int>(ReportItems5Percent.Select(record => (int)record.TotalDeadHenCount).ToList())
        {
            Label = "5% Kandang " + SelectedNoKandang,
            BackgroundColor = ColorUtil.FromDrawingColor(System.Drawing.Color.FromArgb(128, System.Drawing.Color.FromArgb(255, 99, 132))),
            BorderColor = ColorUtil.FromDrawingColor(System.Drawing.Color.FromArgb(255, 99, 132)),
            BorderWidth = 1
        };

        IDataset<int> dataset2 = new BarDataset<int>(ReportItemsAbove5Percent.Select(record => (int)record.TotalDeadHenCount).ToList())
        {
            Label = "Diatas 5% Kandang " + SelectedNoKandang,
            BackgroundColor = ColorUtil.FromDrawingColor(System.Drawing.Color.FromArgb(128, System.Drawing.Color.FromArgb(3, 15, 252))),
            BorderColor = ColorUtil.FromDrawingColor(System.Drawing.Color.FromArgb(3, 15, 252)),
            BorderWidth = 1
        };

        foreach (var label in ReportItems5Percent.Select(record => record.MonthLabel))
        {
            _config.Data.Labels.Add(label);
        }
        
        _config.Data.Datasets.Add(dataset1);
        _config.Data.Datasets.Add(dataset2);

        ChartDataLoaded = true;
    }

    private async Task OnCageChanged(ChangeEventArgs e)
    {        
        if (e.Value.ToString() != "TIDAK")
        {
            SelectedNoKandang = e.Value.ToString();
            StateHasChanged();
        }
    }

    public class ReportItem
    {
        public string MonthLabel { get; set; }
        public int TotalDeadHenCount { get; set; }
        public int TotalPopulasi { get; set; }
    }
}
