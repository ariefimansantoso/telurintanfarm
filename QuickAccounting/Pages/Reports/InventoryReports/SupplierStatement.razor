                    }
                else if (decVoucherTypeId == 4)
                    {
                        values += @"<tr>
            <td style='display:none;'>" + counter.ToString() + @"</td>
            <td>" + dtblsub.Rows[i]["Date"].ToString() + @"</td>
            <td>" + dtblsub.Rows[i]["voucherNo"].ToString() + @" </td>
